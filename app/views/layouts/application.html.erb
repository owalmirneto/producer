<html>
  <head>
    <title>Producer</title>
    <%= stylesheet_link_tag "application", "scaffold" %>
    <%= javascript_include_tag "vendor/jquery", "vendor/jquery-ui", "rails" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <div id="logo">
          <%= image_tag "logo_header.png", :class => "middle" %>
        </div>

        <div id="main-nav">
          <%= menu do |m| %>
            <%= m.home root_path do %>
              HOME <br/><span>DISCOVER OUR <br/> AWESOME PRODUCT</span>
            <% end %>

            <%= m.tour tour_path do %>
              TOUR <br/><span>DISCOVER WHY IT'LL <br/> MAKE YOUR LIFE BETTER</span>
            <% end %>

            <%= m.posts posts_path do %>
              BLOG <br/><span>NEWS, TIPS AND OUR <br/> RANDOM THOUGHTS</span>
            <% end %>

            <%= m.contact new_inquiry_path do %>
              CONTACT <br/><span>YOU'RE NOT ALONE <br/> GET IN TOUCH</span>
            <% end %>

            <%= m.prices "#" do %>
              PRICE <br/><span>SMALL AMOUNT <br/> FOR A BIG BENEFIT</span>
            <% end %>
          <% end %>
        </div>
      </div>

      <div id="content">
        <%= flash_messages %>
        <%= yield %>
      </div>

      <div id="footer">
        <div id="footer-nav">
          <ul>
            <li><a>HOME</a></li>
            <li><a>TOUR</a></li>
            <li><a>BLOG</a></li>
            <li><a>FAQ</a></li>
            <li><a>CONTACT</a></li>
            <li><a>PRICE</a></li>
          </ul>
        </div>
      </div>
    </div>

  </body>
</html>

